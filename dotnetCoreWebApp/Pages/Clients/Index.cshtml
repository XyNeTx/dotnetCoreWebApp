@page
@model dotnetCoreWebApp.Pages.Clients.IndexModel
@{
	<br />
	<h2>List of Clients</h2>
	<a class ="btn btn-primary btn-sm" href="/Clients/Create">Create New Client</a>
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Email</th>
				<th>Phone</th>
				<th>Address</th>
				<th>Create At</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var client in Model.ListClients)
			{
				<tr>
					<td>@client.id</td>
					<td>@client.name</td>
					<td>@client.email</td>
					<td>@client.phone</td>
					<td>@client.address</td>
					<td>@client.create_at</td>
					<td>
						<a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@client.id">Edit</a>
						<a class="btn btn-primary btn-sm" href="/Clients/Delete?id=@client.id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

}
